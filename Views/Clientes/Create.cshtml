@model ProjetoIHC.Models.Cliente

@{
    ViewData["Title"] = "Create Cliente";
}

<h1 class="text-center mb-4">Cadastro de Cliente</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Preencha os dados do cliente</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <!-- Nome Completo -->
                <div class="col-md-6 mb-3">
                    <label asp-for="NomeCompleto" class="form-label fw-bold">Nome Completo</label>
                    <input asp-for="NomeCompleto" class="form-control" placeholder="Digite o nome completo" required />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>

                <!-- Data de Nascimento -->
                <div class="col-md-6 mb-3">
                    <label asp-for="DataNascimento" class="form-label fw-bold">Data de Nascimento</label>
                    <input asp-for="DataNascimento" type="date" class="form-control" required />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- RG -->
                <div class="col-md-6 mb-3">
                    <label asp-for="RG" class="form-label fw-bold">RG</label>
                    <input asp-for="RG" class="form-control" placeholder="Digite o RG" required />
                    <span asp-validation-for="RG" class="text-danger"></span>
                </div>

                <!-- CPF -->
                <div class="col-md-6 mb-3">
                    <label asp-for="CPF" class="form-label fw-bold">CPF</label>
                    <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" required />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- CEP -->
                <div class="col-md-6 mb-3">
                    <label asp-for="CEP" class="form-label fw-bold">CEP</label>
                    <input asp-for="CEP" class="form-control" id="CEP" onblur="SearchZipCode()" required />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>

                <!-- Complemento -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Complemento" class="form-label fw-bold">Complemento</label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Logradouro -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Logradouro" class="form-label fw-bold">Logradouro</label>
                    <input asp-for="Logradouro" class="form-control" placeholder="Digite o endereço" required />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>

                <!-- Bairro -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Bairro" class="form-label fw-bold">Bairro</label>
                    <input asp-for="Bairro" class="form-control" placeholder="Digite o bairro" required />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Cidade -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Cidade" class="form-label fw-bold">Cidade</label>
                    <input asp-for="Cidade" class="form-control" placeholder="Digite a cidade" required />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                <!-- UF -->
                <div class="col-md-6 mb-3">
                    <label asp-for="UF" class="form-label fw-bold">UF</label>
                    <input asp-for="UF" class="form-control" maxlength="2" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
            </div>

            <!-- Estado Civil -->
            <div class="mb-3">
                <label asp-for="EstadoCivil" class="form-label fw-bold">Estado Civil</label>
                <select asp-for="EstadoCivil" class="form-select" required>
                    <option value="">Selecione...</option>
                    <option value="Casado">Casado</option>
                    <option value="Solteiro">Solteiro</option>
                    <option value="Divorciado">Divorciado</option>
                    <option value="Viuvo">Viúvo</option>
                </select>
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>

            <!-- Nome do Pai -->
            <div class="mb-3">
                <label asp-for="NomePai" class="form-label fw-bold">Nome do Pai</label>
                <input asp-for="NomePai" class="form-control" placeholder="Digite o nome do pai" />
                <span asp-validation-for="NomePai" class="text-danger"></span>
            </div>

            <!-- Nome da Mãe -->
            <div class="mb-3">
                <label asp-for="NomeMae" class="form-label fw-bold">Nome da Mãe</label>
                <input asp-for="NomeMae" class="form-control" placeholder="Digite o nome da mãe" />
                <span asp-validation-for="NomeMae" class="text-danger"></span>
            </div>

            <!-- Botão de Submissão -->
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_CEPPartial");
    }
   
}
